* 				{ 
	font-family: 'Helvetica Neue', Helvetica, Arial, Verdana, sans-serif !important;
	}


#wrapper		{
	background: #8fc2da url(<%= asset_path "fade.png" %>) 20% 70px no-repeat ;
	height:1000px;
}



#header_container {
	background: linear-gradient(#FAFAFA,#EAEAEA) !important;
	background: -moz-linear-gradient(#FAFAFA,#EAEAEA) !important;
	background: -ms-linear-gradient(#FAFAFA,#EAEAEA) !important;
	background: -webkit-gradient(linear,left top,left bottom,color-stop(0%,#FAFAFA),color-stop(100%,#EAEAEA)) !important;
	background: -webkit-linear-gradient(#FAFAFA,#EAEAEA) !important;
	background: -o-linear-gradient(#FAFAFA,#EAEAEA) 
	-ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#fafafa',endColorstr='#eaeaea')" !important;
	background: linear-gradient(#FAFAFA,#EAEAEA) !important; 

	height:70px !important;

    margin-bottom: 50px;

	width: 100%;
	z-index: 999;
	zoom: 1;

}



#header 	{
	width:1000px;
	margin: 0 auto !important;
	background: url(<%= asset_path "universitas_logo.png" %>) 0 20px no-repeat !important;
}

.button		{
	display: inline-block;
	text-align: center;
	font-size: 14px;
	color: white;
	padding: 7px 15px;
	font-weight:bold;
	background: #0BB2EA;
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#0bb2ea', endColorstr='#1897c1');
	background: -webkit-gradient(linear, left top, left bottom, from(#0BB2EA), to(#1897C1));
	background: -moz-linear-gradient(top, #0BB2EA, #1897C1);
	border-radius: 8px;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
	border: none !important;
	text-decoration: none;
	cursor: pointer;
	border-image: initial;
	
}