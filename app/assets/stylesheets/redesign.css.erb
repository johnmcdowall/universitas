* 				{ 
	font-family: 'Helvetica Neue', Helvetica, Arial, Verdana, sans-serif !important;
	}


#wrapper		{
	background: #8fc2da url(<%= asset_path "fade.png" %>) 20% 70px no-repeat ;
	height:1000px;
}



#header_container {
	background: -webkit-gradient(linear,0% 0,0% 100%,from(#FCFCFC),to(#E8E8E8));
	background: -moz-linear-gradient(270deg,#FCFCFC,#ECECEC);
	background: linear-gradient(#FAFAFA,#EAEAEA) !important; 
	border-bottom: 2px #E1DFDF solid;
	
	height:70px !important;

    margin-bottom: 50px;

	width: 100%;
	z-index: 999;
	zoom: 1;

}



#header 	{
	width:1000px;
	margin: 0 auto !important;
}

#header #logo	{
	
	height: 70px;
	width: 200px;
	margin: 19px 20px 0 0;
	padding: 0;
	float: left;
}

#header #logo a	{ 
	display: block;
	height: 100%;
	width: 100%;
	background: url(<%= asset_path "universitas_logo.png" %>) no-repeat;
}

#header #logo a span { display:none;}


#header .block	{ float:left; margin:15px 20px 0 0;}

#header .text 				{ font-size: 19px; color: #cfcfcf; margin:0 0 5px 0;}
#header .links a			{ font-size: 15px; color:#7289ff; text-decoration:underline; margin:0 6px 0 0 ;}

#header .links a:hover			{  text-decoration:none;}

#header h1.universitas_logo a	{ 
	width:100px; height:70px; 
}

#header ul { list-style-type: none; }

#header .separator { 
	background: url(<%= asset_path "separator.png" %>) no-repeat;
	width:10px;
	display: block;
	zoom: 1;
	height: 51px;
	float: left;
	margin: 10px 10px 0 0;
}




.button		{
	display: inline-block;
	text-align: center;
	font-size: 14px;
	color: white;
	padding: 7px 15px;
	font-weight:bold;
	background: #0BB2EA;
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#0bb2ea', endColorstr='#1897c1');
	background: -webkit-gradient(linear, left top, left bottom, from(#0BB2EA), to(#1897C1));
	background: -moz-linear-gradient(top, #0BB2EA, #1897C1);
	border-radius: 8px;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
	border: none !important;
	text-decoration: none;
	cursor: pointer;
	border-image: initial;
	
}