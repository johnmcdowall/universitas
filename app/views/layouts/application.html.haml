!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", :'xml:lang' => "en"}
  %head
    %title= "Universitas - #{ t('shared.app_description') }"
    = render :partial => 'shared/stylesheets'
    = yield :stylesheets
    = csrf_meta_tag
    = render :partial => 'shared/site_analytics'
        
  %body
    #wrapper
      #header_container
        #header
          #logo
            %a{ :href => "http://www.universit.as", :class => 'universitas_logo'}
              %span universit.as  # for seo, hidden by css
          = render :partial => 'shared/user_navigation' 
      %section
        %div
          = render :partial => 'shared/left_sidebar'
          %section{ :class => "main-section grid_7" }
            - flash.each do |type, message| 
              %div{ :class => "message #{ type } center closeable" }
                %span.message-close
                  %h3= message
            = yield
          #push
    %footer
      #footer-inner{ :class => "container_8 clearfix" }
        .grid_8
          = raw(t('shared.footer_note'))
  = render :partial => 'shared/javascripts'
  = yield :javascripts
  - if session[:new_group].present? && current_user
    - session[:new_group] = nil
    #activate-new-group