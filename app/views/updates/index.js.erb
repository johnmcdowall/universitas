$('.updates').each(function(index, element){
	if ($(element).find('.endless_scroll_inner_wrap').length){
		var div = '.endless_scroll_inner_wrap';
	}else{
		var div = element;
	}
	$(div).append("<%= escape_javascript(render :partial => 'updates/update', :collection => @feed)%>");
	showUpdatesFor("<%=params[:type]%>");
	<% unless @feed.blank? %>
		$(element).attr('data-last', '<%=@feed.to_a.last.created_at%>')
	<% end %>
});

<% if @feed.blank? %>
	$('#infinite-scroll').detach();
<% end %>